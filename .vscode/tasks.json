{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile and run C",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "gcc -std=c11 -o \"${fileBasenameNoExtension}\" \"${file}\" && .\\${fileBasenameNoExtension} < input.txt > output.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
