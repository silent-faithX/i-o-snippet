{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C",
      "type": "shell",
      "command": "gcc",
      "args": [
        "\"${file}\"",
        "-o",
        "\"${fileBasenameNoExtension}\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "run C",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        ".\\${fileBasenameNoExtension} < input.txt > output.txt"
      ],
      "dependsOn": "build C",
      "problemMatcher": []
    }
  ]
}
